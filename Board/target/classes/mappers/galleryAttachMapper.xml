<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
  PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
  "https://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.board.galleryAttach">
	<!-- 첨부파일 등록 -->
	<insert id="insert">
		INSERT INTO t_gallery_attach(uuid, uploadPath, fileName, gbno)
		VALUES(#{uuid}, #{uploadPath}, #{fileName}, #{gbno})
	</insert>
	
	<!-- 첨부파일 삭제 -->
	<delete id="delete">
		DELETE FROM t_gallery_attach WHERE uuid = #{uuid}
	</delete>
	
	<!-- 갤러리 글번호로 첨부파일 찾기 -->
	<select id="findByGbno" resultType="GalleryAttachDTO">
		SELECT * FROM t_gallery_attach WHERE bno = #{bno}
	</select>

</mapper>